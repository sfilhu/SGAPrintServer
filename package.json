{
  "name": "sga-print-serve",
  "version": "1.0.0",
  "main": "main.js",
  "description": "SGA Print Serve",
  "author": "SÃ©rgio Ramos <sfilhu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:all": "build",
    "dist:mac": "electron-builder --mac",
    "dist:windows": "electron-builder --windows",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "escpos": "^3.0.0-alpha.3",
    "escpos-serialport": "^3.0.0-alpha.2",
    "escpos-usb": "^3.0.0-alpha.2",
    "express": "^4.17.1",
    "loader": "^2.1.1",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "uniqid": "^5.2.0",
    "usb": "^1.6.3"
  },
  "devDependencies": {
    "electron": "^8.5.1",
    "electron-builder": "^22.4.1"
  },
  "build": {
    "appId": "com.sga.printserver",
    "productName": "Sga print server",
    "mac": {
      "target": [
        {
          "target" : "default"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "ia32"]
        }
      ]
    }
  }
}
